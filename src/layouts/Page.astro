---
// import { getUmbracoImage } from "../utils";
import {Image} from 'astro:assets'
import { getUmbracoImage } from "../utils";
import Crumbs from "../components/Crumbs.astro"
import BackBtn from "../components/BackBtn"
const {props} = Astro.props;
const img = getUmbracoImage(props?.properties?.featuredImage);
const path = Astro.url.pathname;
---

<Crumbs path={path}/>
<BackBtn client:load/>

<h1>
    {props?.name}
</h1>
{img &&
    <Image
        src={img?.url}
        alt={img?.name}
        format="webp"
        quality="80"
        width={1280}
        height={720}
        widths={[240,540,720,1280]}
        sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, 1280px`}
        decoding="async"
        loading="lazy"
        style="max-width: 100%; aspect-ratio: 1280 / 720; height: auto;"
    />
}
