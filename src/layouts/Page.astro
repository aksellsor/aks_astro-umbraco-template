---
// import { getUmbracoImage } from "../utils";
import {Image} from 'astro:assets'
import { getUmbracoImage } from "../utils";
import Crumbs from "../components/Crumbs.astro"
import BackBtn from "../components/BackBtn"
const {props} = Astro.props;
const img = getUmbracoImage(props?.properties?.featuredImage);
const path = Astro.url.pathname;
---

<Crumbs path={path} transition:name="crumbs"/>
<BackBtn client:load/>

<h1>
    {props?.name}
</h1>
{img &&
    <Image
        src={img?.url+"?width=200&height=200"}
        alt={img?.name}
        width={200}
        height={200}
        transition:name="featuredimg"
        style="border-radius:.5rem;overflow:hidden;"
    />
}
